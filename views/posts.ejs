<% include head %>
<h1>Hi <%= p.uName %> </h1><br>
<h2>Following are your posts:</h2>
<form method="POST" action="/delete">
<div class="row">
<% for(var i=0;i<p.post.length;i++){ %>
	<div class="col-lg-12">
	<b style="width:100%;margin:50px; margin-bottom:50px;"> <%= p.post[i].title %> <a href="/posts/<%= p.post[i]._id %>">Show</a></b>
	<button  value="<%= p.post[i]._id %>" name="del_id">Delete</button>
	</div>
<% }%>
</div>
<a href="/post-add">add a new post</a>


</form>
<% include foot %>


